<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BudgetFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textBudget"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:text="Suma przychodów"
            android:textColor="#000000"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/budgetText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="165dp"
            android:layout_marginTop="-23dp"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="end"
            android:inputType="numberDecimal"
            android:linksClickable="false"
            android:textColor="#22af15" />

        <EditText
            android:id="@+id/budgetText2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="165dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="right|center_vertical"
            android:inputType="numberDecimal"
            android:linksClickable="false"
            android:textColor="#ab0808" />

        <EditText
            android:id="@+id/budgetText3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="165dp"
            android:layout_marginTop="11dp"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="right|center_vertical"
            android:inputType="numberDecimal"
            android:linksClickable="false" />

        <TextView
            android:id="@+id/textBudget2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-61dp"
            android:text="Suma wydatków"
            android:textColor="#000000"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textBudget3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="13dp"
            android:text="Suma"
            android:textColor="#000000"
            android:textSize="17dp" />


        <org.eazegraph.lib.charts.PieChart
            android:id="@+id/piechart"
            android:layout_width="match_parent"
            android:layout_height="312dp"
            android:layout_marginTop="25dp"
            android:padding="8dp"
            app:egLegendTextSize="18sp"
            app:egUsePieRotation="true"
            app:egValueTextSize="36sp" />

    </LinearLayout>


</FrameLayout>





